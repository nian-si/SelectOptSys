function [val,opt_sol] = run_system(index,type,T,K,other_para) 
% type: 1 for newsvendar; 2 for queueing
if type == 1
    [demand,p,c] = newsvendar_gen_data(index,T);
    q = quantile(demand,(p-c)/p);
    val = mean(p * min(q,demand)) - c * q;
    opt_sol = q;
elseif type == 2
    val = 0;
    opt_sol = 0;
    x = 0.5;
    step_size = 1/2 / sqrt(T * )
    for i = 1:T
        [cur_val,cur_grad] = queue_run_once(index,x,K);
        val = val + cur_val;
        opt_sol = opt_sol + x;
        x = x + step_size * 
    end
    val = val/T;
    x = x/T;
else
    disp "Wrong type!";
end